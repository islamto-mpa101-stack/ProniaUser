@model ProductUpdateVm


<div class="container">
    <div class="row">
        <form method="post" asp-action="Update" asp-controller="Product" enctype="multipart/form-data">


            <div class="form-group">
                <label for="title">Name</label>
                <input asp-for="Name" class="form-control" id="Name" placeholder="Name">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label for="Description">Description</label>
                <input asp-for="Description" class="form-control" id="description" placeholder="Description">
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="MainImagePath" />
                <img src="~/assets/images/website-images/@Model.MainImagePath" width="50" height="50" />
                <label for="MainImage">MainImage</label>
                <input asp-for="MainImage" class="form-control" id="MainImage">
                <span class="text-danger" asp-validation-for="MainImage"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="HoverImagePath" />
                <img src="~/assets/images/website-images/@Model.HoverImagePath" width="50" height="50" />
                <label for="HoverImage">HoverImage</label>
                <input asp-for="HoverImage" class="form-control" id="HoverImage">
                <span class="text-danger" asp-validation-for="HoverImage"></span>
            </div>

            <div class="form-group">

                @for (int i = 0; i < Model.AdditionalImagePath.Count; i++)
                {

                    <div class="imageDiv">
                        <input type="hidden" asp-for="AdditionalImagePath" value="@Model.AdditionalImagePath[i]" />
                        <input type="hidden" asp-for="AdditionalImageIds" value="@Model.AdditionalImageIds[i]" />

                        <div class="image" style="position: relative; width: 50px; height: 50px; display: inline">
                            <img src="~/assets/images/website-images/@Model.AdditionalImagePath[i]" width="50" height="50" />
                            <span style="position: absolute;right: 4px;top: -14px;padding: 3px;background-color: red;color: white;font-size: 9px;cursor: pointer;" class="closeButton">X</span>
                        </div>

                    </div>

                }


                <label for="Images">Images</label>
                <input asp-for="Images" class="form-control" id="Images">
                <span class="text-danger" asp-validation-for="Images"></span>
            </div>


            <div class="form-group">
                <label for="OfferPercentage">Price</label>
                <input asp-for="Price" class="form-control" id="Price" placeholder="Price">
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>

            <div class="form-group">
                <label for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control" id="Rating" placeholder="Rating">
                <span class="text-danger" asp-validation-for="Rating"></span>
            </div>
            <div class="form-group">
                <label for="CategoryId">CategoryId</label>

                <option value="null" disabled selected>Category secin</option>
                <select asp-for="CategoryId" id="CategoryId">
                    <@foreach (Category category in ViewBag.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }

                </select>

                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>

            <div class="form-group">
                <label for="TagIds">TagId</label>

                <select asp-for="TagIds" id="TagIds">
                    @foreach (Tag tag in ViewBag.Tags)
                    {
                        <option value="@tag.Id">@tag.Name</option>
                    }

                </select>

                <span class="text-danger" asp-validation-for="TagIds"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>

        </form>
    </div>
</div>


<script>
    const removeBtns = document.querySelectorAll(".closeButton");

    removeBtns.forEach(btn=>{
        btn.addEventListener("click", function (e) {
            e.preventDefault();
            this.closest(".imageDiv").remove();
        });
    })

</script>


